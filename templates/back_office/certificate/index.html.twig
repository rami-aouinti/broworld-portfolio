{% extends 'base_admin.html.twig' %}

{% block title %}Certificate index{% endblock %}

{% block body %}
    <h1>Certificate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for certificate in certificates %}
            <tr>
                <td>{{ certificate.id }}</td>
                <td>{{ certificate.name }}</td>
                <td>
                    <a href="{{ path('app_certificate_show', {'id': certificate.id}) }}">show</a>
                    <a href="{{ path('app_certificate_edit', {'id': certificate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_certificate_new') }}">Create new</a>
{% endblock %}
