<h5>{{ 'menu.education'|trans|upper }}</h5>

{% for formation in formations %}
    <table class="first" cellpadding="4" cellspacing="6">
        <tr>
            <td width="370" height="100">
                <h6>{{ formation.title }}</h6>
                <h6> {{ formation.school }}</h6>
            </td>
            <td width="100" height="100">
                <br><br><br><br>
                {{ formation.startedAt.format("Y") }} - {{formation.endedAt == null ? "Now" : experience.endedAt.format("Y")}}
            </td>

        </tr>
    </table>
    <br><br>
    {{ formation.description|markdown_to_html|sanitize_html }}
{% endfor %}
